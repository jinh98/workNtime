<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:met_textColorHint="@android:color/darker_gray"
        app:met_primaryColor="@android:color/darker_gray"
        app:met_baseColor="@android:color/black"
        app:met_iconPadding="0dp"
        app:met_iconRight="@drawable/ic_action_name"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textEmailAddress"
        app:met_textColorHint="@android:color/darker_gray"
        app:met_primaryColor="@android:color/darker_gray"
        app:met_baseColor="@android:color/black"
        app:met_iconPadding="0dp"
        app:met_iconRight="@drawable/ic_name"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textEmailAddress"
        app:met_textColorHint="@android:color/darker_gray"
        app:met_primaryColor="@android:color/darker_gray"
        app:met_baseColor="@android:color/black"
        app:met_iconPadding="0dp"
        app:met_iconRight="@drawable/ic_password"
        />

</LinearLayout>